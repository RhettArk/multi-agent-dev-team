{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KB Dependencies Schema",
  "description": "Cross-domain dependency graph",
  "type": "object",
  "patternProperties": {
    "^[a-z-]+$": {
      "type": "object",
      "properties": {
        "depends_on": {
          "type": "array",
          "items": {"type": "string"}
        },
        "used_by": {
          "type": "array",
          "items": {"type": "string"}
        },
        "contracts": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {"type": "string"},
              "schema_ref": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
